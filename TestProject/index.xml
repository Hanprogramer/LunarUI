<Template>
    <Includes>
        <Script Src="./index.js"/>
        <Xml Src="./componentA.xml"/>
    </Includes>

    <Content>
        <BoxContainer Orientation="Vertical" Class="Body" MainAxisAlignment="Fill" CrossAxisAlignment="Fill" Weight="1">
            <Image Source="res://LunarUI logo.svg" ImageFit="Fit" Class="MainTitle" Weight="1"/>
            <Label Text="Welcome to Lunar UI. A truly cross platform, fast, modern UI framework" Class="MainSubTitle" Weight="0.3"/>
            <BoxContainer Class="Debug" MainAxisAlignment="Center" CrossAxisAlignment="Center" Weight="1">
                <Label Text="Documentation" OnClick="onTextClicked" Class="MainButton"/>
                <Label Text="Visit Website" OnClick="onTextClicked" Class="MainButton"/>
                <Label Text="Join Discord" Class="MainButton" />
            </BoxContainer>
        </BoxContainer>
    </Content>

    <Styles>
        <Style Class="MainTitle" Target="Image">
            <Background>B369FE</Background>
            <FontSize>48</FontSize>
            <Foreground>White</Foreground>
            <States>
                <State Name="Hover">
                    <Background>Red</Background>
                    <Foreground>White</Foreground>
                </State>
                <State Name="Active">
                    <Background>DarkRed</Background>
                    <Foreground>White</Foreground>
                </State>
            </States>
        </Style>

        <Style Class="MainButton">
            <Background>B465FB</Background>
            <Padding>24</Padding>
            <Margin>8</Margin>
            <BorderRadius>8</BorderRadius>
        </Style>

        <Style Class="MainSubTitle">
            <FontSize>24</FontSize>
        </Style>

        <Style Class="Body">
            <Background>2F2F2F</Background>
        </Style>
    </Styles>
</Template>