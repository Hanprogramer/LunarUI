<Template>
    <Includes>
        <Script Src="./index.js"/>
        <Xml Src="./componentA.xml"/>/
    </Includes>

    <Content>
        <BoxContainer Orientation="Vertical">
            <Label Text="Welcome to LunarUI" FontSize="32" />
            <Label Text="A truly cross platform UI framework so that this text must fit in this long text" />
            <BoxContainer Orientation="Verticals">
                <Label Text="Documentation" OnClick="onTextClicked" />
                <Label Text="Join Discord" />
            </BoxContainer>
        </BoxContainer>
    </Content>

    <Styles>
        <Style Class="MainTitle">
            <Background>White</Background>
            <TextSize>16</TextSize>
            <TextColor>@Theme.Colors.Text</TextColor>
            <States>
                <State Class="Hover">
                    <Background>Red</Background>
                    <TextColor>White</TextColor>
                </State>
                <State Class="Active">
                    <Background>DarkRed</Background>
                    <TextColor>White</TextColor>
                </State>
            </States>
        </Style>
    </Styles>
</Template>